@model eshop.Web.Models.LoginDto

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row" style="margin-top:50px!important">
            <div class="col-md-4 col-md-offset-4 ">
                <div class="form-horizontal">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h3 class="text-center"> Login </h3>

                            </div>
                        </div>

                        <div class="panel-body">
                            @using (Html.BeginForm("Login","Customer",FormMethod.Post))
                            {


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group" style="margin-bottom:2px!important">

                                    <div class="col-md-8 col-md-offset-2">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="txtUsername"><i class="fa fa-user"></i></span>

                                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Kullanıcı adı griniz" } })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-md-8 col-md-offset-2">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="txtPassword"><i class="fa fa-lock"></i></span>

                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Şifre giriniz", type="password" , id = "txtPassword" } })
                                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-6">
                                        <button type="submit" value="Login" class="btn btn-success" style="width:170px!important">
                                            Login
                                            <span class="fa fa-sign-in"></span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

}



