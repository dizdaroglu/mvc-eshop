@model eshop.EntitiesLayer.Models.Customer

@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register","Customer",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row" style="margin-top:50px!important">
            <div class="col-md-4 col-md-offset-4 ">
                <div class="form-horizontal">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h3 class="text-center"> Kayıt ol  </h3>

                            </div>
                        </div>

                        <div class="panel-body">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group" style="margin-bottom:2px!important">

                                <div class="col-md-8 col-md-offset-2">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="txtName"><i class="fa fa-user"></i></span>

                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = " Adınızı griniz" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>


                            <div class="form-group" style="margin-bottom:2px!important">

                                <div class="col-md-8 col-md-offset-2">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="txtSurname"><i class="fa fa-user"></i></span>

                                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Soyadınızı griniz" } })
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                            @*<div class="form-group" style="margin-bottom:2px!important">

                                <div class="col-md-8 col-md-offset-2">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="txtUsername"><i class="fa fa-user"></i></span>

                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Email griniz" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>*@

                            <div class="form-group" style="margin-bottom:2px!important">

                                <div class="col-md-8 col-md-offset-2">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="txtUsername"><i class="fa fa-user"></i></span>

                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Kullanıcı adı griniz" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-8 col-md-offset-2">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="txtPassword"><i class="fa fa-lock"></i></span>

                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "Şifre giriniz", type = "password", id = "txtPassword" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-6">
                                    <button type="submit" value="Register" class="btn btn-success" style="width:170px!important">
                                        Kayıt Ol
                                        <span class="fa fa-sign-in"></span>
                                    </button>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

}
