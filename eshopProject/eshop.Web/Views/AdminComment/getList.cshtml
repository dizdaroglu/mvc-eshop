@model List<eshop.EntitiesLayer.Models.Comments>

@{
    ViewBag.Title = "getList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Comments</h2>

<a href="/Admin/Index"><span class="fa fa-arrow-left  "></span></a>
<a href="/AdminComment/Create" style="float:right;"><span class="fa fa-plus-circle"></span></a>

<table class="table">
    <tr>
        <th>
            CreatedDate
        </th>
        <th>
            ModifiedDate
        </th>
        <th>
            RemovedDate
        </th>
        <th>
            Text
        </th>
        <th>
            isActive
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemovedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isActive)
        </td>
        <td>
            <a href="/AdminComment/Update/@item.CommentId" class="btn btn-success" title="Güncelle"><span class="fa fa-pencil"></span></a>
            <a href="/AdminComment/Delete/@item.CommentId" class="btn btn-danger" title="Sil"><span class="fa fa-trash"></span></a>
            <a href="/AdminComment/Details/@item.CommentId" class="btn btn-info" title="Detay"><span class="fa fa-list"></span></a>
        </td>
    </tr>
}

</table>
