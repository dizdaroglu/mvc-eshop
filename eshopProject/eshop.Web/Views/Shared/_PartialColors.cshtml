@model  List<eshop.EntitiesLayer.Models.Colors>
@{
    ViewBag.Title = "_PartialColors";
    Layout = null;
}
<div class="aside">
    <h3 class="aside-title">Filter By Color:</h3>
    <ul class="color-option">
        @foreach (var item in Model.Take(1))
        {
            <li class="active"><a href="#" style="background-color:#@item.Code;"></a></li>
        }
        
        @foreach (var item in Model.Where(m=>m.ColorsId>1).ToList())
        {
            <li><a href="#" style="background-color:#@item.Code;"></a></li>
        }

        
    </ul>
</div>


